<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <application>
        <!--English -->
        <locale-config>
            <default-locale>en</default-locale>
            <!--Japanese -->
            <supported-locale>ja</supported-locale>
            <supported-locale>en</supported-locale>
            <supported-locale>vi</supported-locale>
        </locale-config>
        
         <action-listener>
        	org.primefaces.application.DialogActionListener
        </action-listener>
	    <action-listener>org.omnifaces.eventlistener.ResetInputAjaxActionListener</action-listener>
        <navigation-handler>
        	org.primefaces.application.DialogNavigationHandler
        </navigation-handler>
        <view-handler>
        	org.primefaces.application.DialogViewHandler
        </view-handler>
        
        <message-bundle>
	  		jsf_messages
	  	</message-bundle>
    </application>
   <render-kit>
        <renderer>
            <component-family>org.primefaces.component</component-family>
            <renderer-type>org.primefaces.component.CalendarRenderer</renderer-type>
            <renderer-class>arrow.framework.faces.component.renderer.ArrowCalendarRenderer</renderer-class>
        </renderer>
    </render-kit>
    <factory>
        <exception-handler-factory>org.omnifaces.exceptionhandler.FullAjaxExceptionHandlerFactory</exception-handler-factory>
    </factory>
</faces-config>